summary: Execute smoke Playwright end-to-end tests.
tag:
  - smoke
duration: 2h
result: custom
framework: shell
test: |
  set +e
  cd $TMT_TREE 
  bash $TMT_TREE/tests/tmt/scripts/install-podman-desktop-binary.sh
  echo 'TESTTTT'
  ls $TMT_TREE
  echo '-------'
  ls $TMT_TREE/tests
  echo '----------'
  ls $TMT_TREE/tests/podman-desktop-binary/
  export PODMAN_DESKTOP_BINARY=$TMT_TREE/tests/podman-desktop-binary/podman-desktop
  pnpm install --no-frozen-lockfile
  pnpm build
  pnpm test:e2e:smoke
  EXIT_CODE=$?
  bash "$TMT_TREE/tests/tmt/scripts/create-results.sh" "$EXIT_CODE" "smoke"
